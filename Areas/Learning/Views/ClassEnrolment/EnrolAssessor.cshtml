@using LMS.Extentions
@using LMS.Utility
@model LMS.Models.ViewModels.ClassEnrolmentViewModel
@{
    ViewData["Title"] = "EnrolAssessor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Enrol</h2>
<br />
<div class="border backgroundWhite row">
    
    <div class="col-12 border-right">

        <h4 class="text-black-50">Enrolling Assessor into Class: @Model.ClassEnrolment.Class.Name</h4>
        <br />
        <form method="post" asp-action="Enrol">

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.ClassEnrolment.ClassId" id="Id" />
            <input type="hidden" asp-for="@Model.ClassEnrolment.UserRole" value="@SD.Assessor" />
            <input type="hidden" asp-for="@Model.ClassEnrolment.EnrolmentDate" value="@DateTime.Now" />
            <input type="hidden" asp-for="@Model.ClassEnrolment.Status" value="@SD.StatusActive" />
            <input type="hidden" name="type" id="type" value="@SD.Assessor" />
            <div class="form-group row">

                <div class="col-2">
                    <label asp-for="@Model.ApplicationUser" class="col-form-label"></label>
                </div>

                <div class="col-6">

                    <select id="ddlContentType" required asp-for="@Model.ClassEnrolment.UserId" data-val-required="Select user" asp-items="@Model.UsersInRole" class="form-control"></select>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_CreateEnrolAndBackToListButton" model="@Model"/>
                </div>
            </div>

        </form>

</div>



</div>

@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

 


}
