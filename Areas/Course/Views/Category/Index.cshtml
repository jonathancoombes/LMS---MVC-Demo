@using LMS.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

<div class="border backgroundWhite">

    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right">
                <partial name="_CreateCategoryButtonPartial" />
       


</div>
    </div>

    <br />
    <div>
        @if (Model.Count() > 0)
        {
        <table class="table table-striped border">

            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>Actions</th>
                
        
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>

            @if (item.CanDelete == true || item.CanDelete == null)
            {
                <partial name="_CanDeleteTableButtonPartial" model="item.Id" />
            }
            else
            {
                <partial name="_CantDeleteTableButtonPartial" model="item.Id" />
            }
        </tr>
            }

        </table>
        }
        else {
            <h3>No Category Exists</h3>
        }
    </div>

</div>
      
