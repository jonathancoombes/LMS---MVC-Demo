@using LMS.Models
@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Sub Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

<div class="border backgroundWhite">

    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub Category List</h2>
        </div>
        <div class="col-6 text-right">



            <!--Renders a partial view-->
            <partial name="_CreateSubCategoryButtonPartial" />

        </div>
    </div>

    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">

                <tr class="table-secondary">
                    <th style="width:70%">
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th style="width:18%">
                        @Html.DisplayNameFor(m => m.Category.Name)
                    </th>
                    <th>View</th>
                    <th>Actions</th>
                    

                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Category.Name)
                </td>
                <td>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-Id="@item.Id">
                        <i class="fas fa-info-circle"></i>
                    </a>
                </td>

                @if (item.CanDelete == true || item.CanDelete == null)
                {
                        <partial name="_CanDeleteTableButtonPartial" model="item.Id" />
                 }
                else
                {
                        <partial name="_CantDeleteTableButtonPartial" model="item.Id" />
                }
            </tr>
                }

            </table>
        }
        else
        {
            <h3>No Sub Category Exists</h3>
        }
    </div>

</div>



