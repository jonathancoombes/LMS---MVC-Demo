@using LMS.Models.Course
@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

<div class="border backgroundWhite">

    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Select Course to View Modules</h2>
        </div>
        
    </div>

    <br />
    <div>
        @if (Model.Count() > 0)
        {
        <table class="table table-striped border">

            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Reference)
                </th>
                <th> </th>
                <th>Edit</th>
         

            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Reference)
            </td>
            <td>
                <partial name="_ModuleIndexTableButtonPartial" model="item.Id" />
            </td>
        </tr>
            }

        </table>
        }
        else {
            <h3>No Modules Exists</h3>
        }
    </div>

</div>
      
