@model  int

<td style="width:150px; text-align:center">

    <div class="btn-group" role="group">
        <a class="btn btn-sm btn-secondary text-black" asp-action="Details" asp-route-Id="@Model">
            <i class="fas fa-eye"></i>
        </a>
        <a class="btn btn-sm btn-danger text-white" asp-action="Delete" asp-route-Id="@Model">
            <i class="fas fa-trash-alt"></i>
        </a>
    </div>
       
</td>